{
    "version": 2,
    "name": "getcountrycodes.com",
    "alias": "getcountrycodes.com",
    "github": {
      "silent": true
    },
    "env": {
      "GCC_MONGODB_URI": "@gcc-mongodb-uri"
    },
    "builds": [
    	  { "src": "www/public/index.html", "use": "@now/static" },
        { "src": "www/public/docs/build.sh", "use": "@now/static-build", "config": { "distDir": "_site" } },
        { "src": "api/countries.json", "use": "@now/static" },
        { "src": "www/public/gcc/package.json", "use": "@now/static-build" },
        { "src": "www/public/gcc/dist/**", "use": "@now/static" },
        { "src": "api/go/*.go", "use": "@now/go" },
        { "src": "api/express/**/*.js", "use": "@now/node@canary" }
    ],
    "routes": [
        { "src": "/api/countries", "methods": ["GET"], "dest": "/api/express/index.js" },
        { "src": "/api/countries/(.*)", "methods": ["GET"], "dest": "/api/express/index.js" },
        { "src": "/api/(.*)", "methods": ["GET"], "dest": "/api/$1" },
        { "src": "/docs(.*)", "dest": "/www/public/docs$1" },
        { "src": "/(.*)", "dest": "/www/public/gcc/$1" }
    ]
}
